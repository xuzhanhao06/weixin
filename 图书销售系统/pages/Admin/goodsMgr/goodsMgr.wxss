/* page/admin/goodsMgr/goodsMgr.wxss */
.create-tip{
  color: rgb(241, 153, 153);
}
.classify-box{
    color: #999;
    font-size: 28rpx;
}
.classify{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.classify-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
}
.classify-list:last-child{
    border-bottom: 0;
}
.classify-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.classify-add-detail{
    position: relative;
    height: 640rpx;
    padding: 10rpx 0rpx 10rpx 50rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.classify-detail{
    position: relative;
    height: 250rpx;    /*删除的上面那条线*/
    padding: 10rpx;
    border-bottom: 1rpx solid #e9e9e9;
   
}
.classify-detail image{    
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 150rpx;
    height: 150rpx;
}
.classify-detail view{
    margin-top: 10rpx;
    margin-left: 170rpx;
    line-height: 40rpx;
}
.classify-box .classify-list .classify-detail .classify-title{

    overflow:hidden; /*超出一行文字自动隐藏 */
    text-overflow:ellipsis; /*文字隐藏后添加省略号*/
    white-space:nowrap; /*强制不换行*/
}

.classify-detail .classify-status{
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #b42f2d;
}
.classify-footer{
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding:15rpx 30rpx 15rpx 0;
}
.classify-footer .classify-btn{
    float: right;
    width: 270rpx;
    height: 60rpx;
    line-height:60rpx;
    border-radius: 6rpx;
    background: #b42f2d;
    color: #fff;
}
.deal-btn{
    margin-top: 5rpx;
    float: right;
    width: 270rpx;
    height: 60rpx;
    line-height:60rpx;
    border-radius: 6rpx;
    background: #b42f2d;
    color: #fff;
}