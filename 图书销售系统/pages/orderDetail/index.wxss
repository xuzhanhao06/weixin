.orders{
  height: 90rpx;
  line-height: 90rpx; /*文字竖着放中间*/
  border-bottom: 1rpx solid #e9e9e9;/*下划线*/
  text-align: center; /*文字横着正中央*/
}
.cart-box{
  padding-bottom: 100rpx;
}
.cart-list{
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-thumb{
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}
.cart-list .cart-pro-price{
  display: inline-block;
  float:right;  /*将价格放最右边*/
  height: 105rpx;
  line-height: 50rpx;
}

.cart-list .cart-count-box{
  position: absolute;
  left: 285rpx;
  bottom: 20rpx;
  width: 250rpx;
  height: 80rpx;
}
.cart-list .cart-count-box text{
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}
.cart-count-num{
  width: 150rpx;
}
.cart-del{
   position: absolute;
  right: 65rpx;   
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.cart-footer{
  position: fixed;
  bottom:0;
  left: 0;
  width:100%;
  height: 170rpx;
  line-height: 50rpx; /*相邻行之间间距*/
  box-sizing: border-box;
  background: #AB956D;
  color:#fff;
}
.cart-address-detail{
    float: left;
    margin-left: 10rpx;
}
.cart-total-price{
 padding-top: 30rpx;
 float: right;
 width: 120rpx;
 margin-right: 25rpx;
}
 .cart-address-detail view{
  height: 25px;
} 
.cart-no-data{
      padding:40rpx 0;
    color: #999;
    text-align: center;
}

button{
  margin-top: 20rpx;
  width: 200rpx;
  background: red;
  color: white;
  margin-right: 0rpx;
}


